<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242424"
    tools:context=".AttractionRegistration">


    <Button
        android:id="@+id/btnUpload"
        android:layout_width="161dp"
        android:layout_height="51dp"
        android:background="@drawable/buttonyellow"
        android:enabled="false"
        android:text="Upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:layout_constraintVertical_bias="0.775" />

    <ImageView
        android:id="@+id/attractionPic"
        android:layout_width="371dp"
        android:layout_height="175dp"
        android:paddingTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textviewImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here to insert image"
        android:textSize="25dp"
        android:textColor="#FFC045"
        app:layout_constraintBottom_toBottomOf="@+id/attractionPic"
        app:layout_constraintEnd_toEndOf="@+id/attractionPic"
        app:layout_constraintStart_toStartOf="@+id/attractionPic"
        app:layout_constraintTop_toTopOf="@+id/attractionPic" />

    <EditText
        android:id="@+id/textviewDesc"
        android:layout_width="386dp"
        android:layout_height="165dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/edittextstyled"
        android:ems="10"
        android:gravity="start"

        android:hint="Description"
        android:inputType="textMultiLine"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewName"
        app:layout_constraintVertical_bias="0.068" />

    <EditText
        android:id="@+id/textviewName"
        android:layout_width="225dp"
        android:layout_height="38dp"
        android:background="@drawable/edittextstyled"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="#242424"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewDesc"
        app:srcCompat="@android:drawable/ic_menu_mylocation" />

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="408dp"
        android:layout_height="37dp"
        android:text="Address"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btnUpload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:layout_constraintVertical_bias="0.375" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="148dp"
        android:layout_height="21dp"
        android:layout_marginStart="136dp"
        android:text="Choose Location"
        android:textAlignment="center"
        android:textColor="#FFFF"
        android:textStyle="italic|bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton" />

</androidx.constraintlayout.widget.ConstraintLayout>