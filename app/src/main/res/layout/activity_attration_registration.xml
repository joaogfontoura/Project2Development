<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242424"
    tools:context=".AttractionRegistration">


    <Button
        android:id="@+id/btnUpload"
        android:layout_width="161dp"
        android:layout_height="51dp"
        android:background="@drawable/buttonyellow"
        android:enabled="false"
        android:text="Upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attractionPic"
        app:layout_constraintVertical_bias="0.799" />

    <ImageView
        android:id="@+id/attractionPic"
        android:layout_width="371dp"
        android:layout_height="175dp"
        android:paddingTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textviewImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to insert image"
        app:layout_constraintBottom_toBottomOf="@+id/attractionPic"
        app:layout_constraintEnd_toEndOf="@+id/attractionPic"
        app:layout_constraintStart_toStartOf="@+id/attractionPic"
        app:layout_constraintTop_toTopOf="@+id/attractionPic" />

    <EditText
        android:id="@+id/textviewDesc"
        android:layout_width="386dp"
        android:layout_height="165dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/edittextstyled"
        android:ems="10"
        android:gravity="start"
        android:hint="Description"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewName"
        app:layout_constraintVertical_bias="0.068" />

    <EditText
        android:id="@+id/textviewLoc"
        android:layout_width="390dp"
        android:layout_height="70dp"
        android:background="@drawable/edittextstyled"
        android:ems="10"
        android:gravity="start"
        android:hint="Location"
        android:inputType="textPersonName"
        android:paddingStart="10px"
        android:paddingLeft="10px"
        android:paddingTop="10px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewDesc"
        app:layout_constraintVertical_bias="0.095" />

    <EditText
        android:id="@+id/textviewName"
        android:layout_width="225dp"
        android:layout_height="38dp"
        android:background="@drawable/edittextstyled"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36" />

</androidx.constraintlayout.widget.ConstraintLayout>